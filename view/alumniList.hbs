<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MCA Alumni List</title>
    <link rel="icon" href="https://your-favicon-url.png"> 
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
        * {
            font-family: "Poppins", sans-serif;
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            max-width: 1200px;
            margin: 20px auto; 
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: auto; 
        }

        h1 {
            text-align: center;
            color: #fff;
            background-color: #3d6ef5ff;
            border-radius: 5px;
            padding: 5px;
            margin: 0; 
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 12px;
        }

        .td {
            text-align: center;
        }

        th {
            background-color: #3d6ef5ff;
            color: #fff;
        }

        .back-button {
            position: absolute;
            top: 48px;
            left: 12%; 
            text-decoration: none;
        }

        .back-button img {
            width: 40px;
            height: 40px;
            margin-right: 5px;
            vertical-align: middle;
        }

        .search-container, .filter-container, .download-container {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .search-container {
            text-align: left; 
            flex: 1; 
        }

        .filter-container, .download-container {
            text-align: right; 
            flex: 1; 
        }

        .filter-container label, .search-container label, .download-container label {
            font-size: 16px;
            font-weight: bold;
            margin-right: 10px;
        }

        .filter-container select, .search-container input[type="text"], .download-container select {
            padding: 8px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 200px;
            outline: none;
            transition: border-color 0.3s;
        }

        .filter-container select:hover, .filter-container select:focus, 
        .search-container input[type="text"]:hover, .search-container input[type="text"]:focus,
        .download-container select:hover, .download-container select:focus {
            border-color: #3d6ef5ff;
        }

        .search-container button {
            padding: 8px 14px;
            font-size: 14px;
            color: #fff;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.4s, color 0.4s;
        }

        .search-container button:hover {
            background: #fff;
            color: #3d6ef5ff;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 8px 14px;
            color: #fff;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            text-decoration: none;
            font-size: 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.4s, color 0.4s;
        }

        .btn:hover {
            background: #fff;
            color: #3d6ef5ff;
        }

        label {
            color: #3d6ef5ff;
        }

        .top-section {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .left-section, .right-section {
            display: flex;
            flex-direction: column;
        }

    </style>
</head>
<body>
<div class="container">
    <h1>MCA ALUMNI LIST</h1>
    <a href="/ssm/mca/dashboard" class="back-button">
        <img src="https://i.postimg.cc/Ghw7c3bx/back-button-white.png" alt="Go Back">
    </a>
    <div class="top-section">
        <div class="left-section">
            <div class="search-container">
                <label for="searchName">Std Name &#8205; :&#8205;</label>
                <input type="text" id="searchName" name="searchName" placeholder="Enter name">
                <button onclick="applySearch()">Search</button>
            </div>
            <div class="search-container" style="clear: both;">
                <label for="searchId">Student ID :</label>
                <input type="text" id="searchId" name="searchId" placeholder="Enter Student ID">
                <button onclick="applyIdSearch()">Search</button>
            </div>
        </div>
        <div class="right-section">
            <div class="filter-container">
                <label for="gradYear">Filter by Graduation Year :</label>
                <select id="gradYear" name="gradYear" onchange="applyFilter(this.value)">
                    <option value="">Select</option>
                    {{#each gradYears}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="filter-container">
                <label for="gradYear">Download :</label>
                <select id="gradYear" name="gradYear" onchange="downloadAPICall(this.value)">
                    <option value="">Select</option>
                    {{#each gradYears}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Student ID</th>
            <th>Gender</th>
            <th>Date Of Birth</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Graduation Year</th>
        </tr>
        </thead>
        <tbody>
        {{#each students}}
        <tr>
            <td>{{name}}</td>
            <td class="td">{{studentId}}</td>
            <td class="td">{{gender}}</td>
            <td class="td">{{dob}}</td>
            <td class="td">+91 {{phone}}</td>
            <td class="td">{{email}}</td>
            <td class="td">{{graduationYear}}</td>
        </tr>
        {{/each}}
        </tbody>
    </table>

    <div class="btn-container">
        <a class="btn" href="/ssm/mca/dashboard">&lt; Go back!</a>
    </div>
</div>

<script>
    function applyFilter(year) {
        document.getElementById('searchName').value = '';
        document.getElementById('searchId').value = '';

        const urlParams = new URLSearchParams(window.location.search);
        urlParams.delete('name');
        urlParams.delete('studentId');
        urlParams.set('year', year);
        window.location.href = window.location.pathname + '?' + urlParams.toString();
    }
    
    function downloadAPICall(year) {
        document.getElementById('searchName').value = '';
        document.getElementById('searchId').value = '';

        const urlParams = new URLSearchParams(window.location.search);
        urlParams.delete('name');
        urlParams.delete('studentId');
        urlParams.set('year', year);
        urlParams.set('download', true);
        window.location.href = window.location.pathname + '?' + urlParams.toString();
    }

    function applySearch() {
        const searchName = document.getElementById('searchName').value.trim();
        document.getElementById('searchId').value = '';
        
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.delete('year');
        urlParams.delete('studentId');
        urlParams.set('name', searchName);
        window.location.href = window.location.pathname + '?' + urlParams.toString();
    }

    function applyIdSearch() {
        const searchId = document.getElementById('searchId').value.trim();
        document.getElementById('searchName').value = '';
        
        const urlParams = new URLSearchParams(window.location.search);
        urlParams.delete('year');
        urlParams.delete('name');
        urlParams.set('studentId', searchId);
        window.location.href = window.location.pathname + '?' + urlParams.toString();
    }

</script>
</body>
</html>
