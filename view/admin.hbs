                <div class="button-container">
                    <td><button type="button" onclick="register()">Register</button></td>
                    <td><button type="button" onclick="studentList()">List</button></td>
                </div>
            </tr>
            <tr>
                <td>Student Fee Register</td>
                <div class="button-container">
                    <td><button type="button" onclick="feeRegister()">Register</button></td>
                    <td><button type="button" onclick="feeList()">List</button></td>
